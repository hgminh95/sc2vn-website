nav#nav.navbar.navbar-default.navbar-fixed-top
  .container
    // Brand and toggle get grouped  for better mobile display
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse', aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Starcraft 2 Tournament Manager

    // Collect the nav links, forms and other content for toggling
    .collapse.navbar-collapse(id='navbar-collapse')
      if isLoggedIn
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
              - var count= 0
              each item in currentUser.notifications
                  - count++
              .fa.fa-bell-o
              .badge=  count
            ul.dropdown-menu
              if (currentUser.notifications.length == 0)
                li
                  p.dropdown-item you don't have notifications
              each notification in currentUser.notifications
                li
                  a(href=notification.link)
                    i.fa.fa-fw(class='fa-' + notification.icon)
                    | &nbsp;
                    = notification.message

          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
              = currentUser.name
              | &nbsp;
              span.caret
            ul.dropdown-menu
              li
                a(href=currentUser.getShowPath())
                  i.fa.fa-fw.fa-gears
                  | &nbsp;Account
              li
                a(href='/logout')
                  i.fa.fa-fw.fa-sign-out
                  | &nbsp;Logout

      else
        a.btn.btn-primary.btn-sm.navbar-btn.navbar-right(href='/users/register')= __('Sign up')
        p.navbar-text.navbar-right
          a(data-toggle='modal', data-target='#login-modal')= __('Log in')
          | &nbsp; or &nbsp;

      ul.nav.navbar-nav.navbar-right
        li
          span
            a(href='/language?lang=en')
              img(src='http://www.flaginstitute.org/wp/wp-content/uploads/2012/10/UK-Union-Flag.png', height='40', width='40')
            a(href='/language?lang=vi')
              img(src='https://upload.wikimedia.org/wikipedia/commons/thumb/2/21/Flag_of_Vietnam.svg/2000px-Flag_of_Vietnam.svg.png', height='40', width='40')
        li
          a(href='/')= __('Home')
        li
          a(href='/tournaments')= __('Tournaments')
        li
          a(href='/users/rank')= __('Rank')
        li
          a(href='/matches')= __('Matches')

#login-modal.modal.fade(tabindex=-1, role='dialog', aria-labelledby='login-label')
  .modal-dialog.modal-sm(role='document')
    .modal-content
      .modal-header.light
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true')
            i.fa.fa-close.fa-fw
        h4#login-label.modal-title.text-center Login
      .modal-body
        a.btn.button-submit.btn-block(href='/auth/bnet') Log in with Battle.net
        h5.text-center or
        form(method='post', action='/auth/local')
          .form-group
            .input-group
              span.input-group-addon
                i.fa.fa-envelope.fa-fw
              input.form-control.input-lg(type='email', name='email', placeholder='Email')
            .input-group
              span.input-group-addon
                i.fa.fa-key.fa-fw
              input.form-control.input-lg(type='password', name='password', placeholder='Password')
          button.btn.button-submit.btn-block(type='submit') Log in
          h6.text-center
            a(href='#') Forgot your password?
